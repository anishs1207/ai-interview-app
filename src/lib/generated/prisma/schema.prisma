generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String      @id @default(uuid())
  email               String      @unique
  isRecruiter         Boolean
  recruiterInterview  Interview?  @relation("RecruiterInterview")
  candidateInterviews Interview[] @relation("CandidateInterview")
}

model Interview {
  id                      String   @id @default(uuid())
  theme                   Theme
  positionTitle           String
  active                  Boolean
  interviewerName         String
  interviewerPrompt       String
  interviewerFirstMessage String
  maxDurationInMinutes    Int
  vapiAssistantId         String
  QuestionsToAsk          String[]
  candidates              User[]   @relation("CandidateInterview")
  recruiter               User     @relation("RecruiterInterview", fields: [userId], references: [id])
  userId                  String   @unique
}

enum Theme {
  TECH
  BEHAVE
}
